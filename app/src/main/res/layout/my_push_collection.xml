<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ordinary"
    android:layout_margin="5dp"
    android:orientation="vertical">
    <!--普通的样式-->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/my_push_collection_username"
            android:layout_width="wrap_content"
            android:text="用户名"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/my_push_collection_nickname"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:text="昵称"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:text="内容"
        android:id="@+id/my_push_collection_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="时间"
        android:id="@+id/my_push_collection_time"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content" />


</LinearLayout>